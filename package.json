{
  "name": "cl-ccip-messages",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Cross-chain messaging application using Chainlink CCIP protocol to send messages between Ethereum, Arbitrum, Optimism, Polygon, Base, and Linea",
  "scripts": {
    "dev": "vite",
    "prebuild": "node vercel-build.js",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "node server.js",
    "test": "hardhat test",
    "compile": "hardhat compile",
    "deploy:ethereum": "hardhat run scripts/deploy.js --network ethereum",
    "deploy:arbitrum": "hardhat run scripts/deploy.js --network arbitrum",
    "deploy:optimism": "hardhat run scripts/deploy.js --network optimism",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "deploy:base": "hardhat run scripts/deploy.js --network base",
    "deploy:linea": "hardhat run scripts/deploy.js --network linea",
    "deploy:all": "npm run deploy:ethereum && npm run deploy:arbitrum && npm run deploy:optimism && npm run deploy:polygon && npm run deploy:base && npm run deploy:linea",
    "deploy:local": "hardhat run scripts/deploy-local.js --network localhost",
    "send-message": "hardhat run scripts/send-message.js",
    "reset-local": "node scripts/reset-local.js",
    "verify:ethereum": "hardhat verify --network ethereum",
    "verify:arbitrum": "hardhat verify --network arbitrum",
    "verify:optimism": "hardhat verify --network optimism",
    "verify:polygon": "hardhat verify --network polygon",
    "verify:base": "hardhat verify --network base",
    "verify:linea": "hardhat verify --network linea"
  },
  "keywords": [
    "chainlink",
    "ccip",
    "blockchain",
    "cross-chain",
    "messaging",
    "ethereum",
    "arbitrum",
    "optimism",
    "polygon",
    "base",
    "linea"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ethers": "^6.9.0",
    "express": "^4.21.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.20.0",
    "viem": "^1.19.11",
    "wagmi": "^1.4.7"
  },
  "devDependencies": {
    "@chainlink/contracts": "^1.3.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.2.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "dotenv": "^16.4.7",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "hardhat": "^2.22.19",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}
